<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="client">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="cin" type="VARCHAR(500)"/>
        <column name="nom" type="VARCHAR(500)"/>
        <column name="tel" type="VARCHAR(500)"/>
        <column name="email" type="VARCHAR(500)"/>
        <column name="adresse" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>
        <column name="creance" type="NUMERIC"/>


    </createTable>
  </changeSet>


    <!-- Create Sequence for ContainerType -->
  <changeSet id="2" author="your-name">
    <createSequence sequenceName="client_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="3" author="your-name">
    <loadData
            file="classpath:/db/migration/data/commun/Client.csv"
            tableName="client">
      <column name="id" type="NUMERIC"/>
          <column name="cin" type="STRING"/>
          <column name="nom" type="STRING"/>
          <column name="tel" type="STRING"/>
          <column name="email" type="STRING"/>
          <column name="adresse" type="STRING"/>
          <column name="description" type="STRING"/>
          <column name="creance" type="NUMERIC"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
